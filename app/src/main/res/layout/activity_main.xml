<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
  <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
      android:id="@+id/score_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin"
      android:layout_marginTop="@dimen/margin"
      android:text="@string/score"
      android:textColor="@android:color/black"
      android:textSize="@dimen/font_size"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="SpUsage" />

    <TextView
      android:id="@+id/score_0"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin"
      android:layout_marginTop="@dimen/margin"
      android:textColor="@android:color/black"
      android:textSize="@dimen/font_size"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/score_title"
      tools:text="@string/score_text"
      tools:ignore="SpUsage" />

    <TextView
      android:id="@+id/score_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin"
      android:layout_marginTop="@dimen/margin"
      android:textColor="@android:color/black"
      android:textSize="@dimen/font_size"
      app:layout_constraintStart_toEndOf="@+id/score_0"
      app:layout_constraintTop_toBottomOf="@+id/score_title"
      tools:text="@string/score_text"
      tools:ignore="SpUsage" />

    <TextView
      android:id="@+id/score_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin"
      android:layout_marginTop="@dimen/margin"
      android:textColor="@android:color/black"
      android:textSize="@dimen/font_size"
      app:layout_constraintStart_toEndOf="@+id/score_1"
      app:layout_constraintTop_toBottomOf="@+id/score_title"
      tools:text="@string/score_text"
      tools:ignore="SpUsage" />

    <TextView
      android:id="@+id/score_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin"
      android:layout_marginTop="@dimen/margin"
      android:textColor="@android:color/black"
      android:textSize="@dimen/font_size"
      app:layout_constraintStart_toEndOf="@+id/score_2"
      app:layout_constraintTop_toBottomOf="@+id/score_title"
      tools:text="@string/score_text"
      tools:ignore="SpUsage" />

    <TextView
      android:id="@+id/score_4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin"
      android:layout_marginTop="@dimen/margin"
      android:textColor="@android:color/black"
      android:textSize="@dimen/font_size"
      app:layout_constraintStart_toEndOf="@+id/score_3"
      app:layout_constraintTop_toBottomOf="@+id/score_title"
      tools:text="@string/score_text"
      tools:ignore="SpUsage" />

    <TextView
      android:id="@+id/border_view_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin"
      android:layout_marginTop="@dimen/margin"
      android:text="@string/border_view"
      android:textColor="@android:color/black"
      android:textSize="@dimen/font_size"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/score_0"
      tools:ignore="SpUsage" />

    <ii887522.controlify.view.BorderViewGroup
      android:id="@+id/border_view_group"
      android:layout_width="match_parent"
      android:layout_height="@dimen/border_view_group_height"
      android:layout_marginHorizontal="@dimen/margin"
      android:layout_marginTop="@dimen/margin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/border_view_title" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
